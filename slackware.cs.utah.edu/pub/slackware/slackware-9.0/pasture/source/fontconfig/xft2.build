#!/bin/sh
CWD=`pwd`
VERSION=1.0.1
cd /tmp
tar xzvf $CWD/fcpackage.2_1.tar.gz
cd fcpackage.2_1/Xft
chown -R root.root .
find . -perm 664 -exec chmod 644 {} \;
CFLAGS="-O2 -march=i386 -mcpu=i686" \
  ./configure --prefix=/usr \
              --sysconfdir=/etc \
              --includedir=/usr/include/Xft2 \
            i386-slackware-linux
make
make install
mkdir -p /usr/man/man1
cat Xft.man | gzip -9c > /usr/man/man3/Xft.3x.gz
mkdir -p /install
cat $CWD/slack-desc.xft2 > /install/slack-desc
