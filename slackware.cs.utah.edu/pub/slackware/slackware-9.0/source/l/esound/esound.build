#!/bin/sh
CWD=`pwd`
VERSION=0.2.29
cd /tmp
tar xjvf $CWD/esound-$VERSION.tar.bz2
cd esound-$VERSION
chown -R root.root .
find . -perm 664 -exec chmod 644 {} \;
CFLAGS="-O2 -march=i386 -mcpu=i686" ./configure --prefix=/usr \
            i386-slackware-linux
make
make install
mkdir -p /usr/doc/esound-$VERSION
cp -a  \
  AUTHORS COPYING COPYING.LIB ChangeLog INSTALL NEWS README TIPS TODO \
  /usr/doc/esound-$VERSION
mkdir -p /install
cat $CWD/slack-desc > /install/slack-desc
