#!/bin/sh
CWD=`pwd`
VERSION=1.95.5
cd /tmp
tar xzvf $CWD/expat-$VERSION.tar.gz
cd expat-$VERSION
chown -R root.root .
find . -perm 664 -exec chmod 644 {} \;
CFLAGS="-O2 -march=i386 -mcpu=i686" ./configure --prefix=/usr \
            i386-slackware-linux
make
make install
mkdir -p /usr/doc/expat-$VERSION
cp -a  \
  COPYING Changes README doc/reference.html \
  /usr/doc/expat-$VERSION
mkdir -p /install
cat $CWD/slack-desc > /install/slack-desc
