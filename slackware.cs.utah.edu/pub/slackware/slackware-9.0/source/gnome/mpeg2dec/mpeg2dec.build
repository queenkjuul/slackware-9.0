CWD=`pwd`

VERSION=0.3.1

cd /tmp
tar xzvf $CWD/mpeg2dec-$VERSION.tar.gz
cd mpeg2dec-$VERSION
chown -R root.root .
find . -perm 666 -exec chmod 644 {} \;
find . -perm 664 -exec chmod 644 {} \;
CFLAGS="-O2" \
./configure --prefix=/usr \
            i386-slackware-linux
make
make install
mkdir -p /usr/doc/mpeg2dec-$VERSION
cp -a \
  AUTHORS BUGS COPYING HACKING MAINTAINERS NEWS README \
  /usr/doc/mpeg2dec-$VERSION
mkdir -p /install
cat $CWD/slack-desc > /install/slack-desc

