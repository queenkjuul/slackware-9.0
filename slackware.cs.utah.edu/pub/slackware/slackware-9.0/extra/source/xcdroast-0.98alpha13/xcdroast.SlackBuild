#!/bin/sh
# Set initial variables:
CWD=`pwd`
if [ "$TMP" = "" ]; then
  TMP=/tmp
fi

if [ ! -d $TMP ]; then
  mkdir -p $TMP # location to build the source
fi
PKG=/tmp/package-xcdroast

VERSION=0.98alpha13
ARCH=i386
BUILD=1

rm -rf $PKG
mkdir -p $PKG
echo "+=================+"
echo "| xcdroast-$VERSION |"
echo "+=================+"
cd $TMP
tar xjvf $CWD/xcdroast-$VERSION.tar.bz2
cd xcdroast-$VERSION
chown -R root.root .
find . -perm 775 -exec chmod 755 {} \;
find . -perm 700 -exec chmod 755 {} \;
find . -perm 744 -exec chmod 755 {} \;
find . -perm 664 -exec chmod 644 {} \;
find . -perm 600 -exec chmod 644 {} \;
./configure --prefix=/usr --sysconfdir=/etc
make
make install DESTDIR=$PKG
strip $PKG/usr/bin/* $PKG/usr/lib/xcdroast-*/bin/*
chown -R root.bin $PKG/usr/bin
gzip -9 $PKG/usr/man/man1/*
mkdir -p $PKG/usr/doc/xcdroast-$VERSION
cp -a \
  CHANGELOG COPYING DOCUMENTATION FAQ README README.AIX README.HPUX README.MacOSX README.ProDVD README.atapi README.nonroot README.setup-bulgarian.html TRANSLATION.HOWTO \
  $PKG/usr/doc/xcdroast-$VERSION
mkdir -p $PKG/install
cat $CWD/slack-desc > $PKG/install/slack-desc

cd $PKG
makepkg -l y -c n ../xcdroast-$VERSION-$ARCH-$BUILD.tgz

